{
  "name": "react-review",
  "version": "0.1.0",
  "private": true,
  "jest": {
    "setupFiles": [
      "<rootDir>/utils/shim.js",
      "<rootDir>/utils/enzyme-setup.js"
    ],
    "collectCoverageFrom": [
      "pages/*.js",
      "components/*.js",
      "!pages/_document.js",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "coverageReporters": [
      "json",
      "lcov"
    ]
  },
  "dependencies": {
    "next": "^4.2.1",
    "next-redux-wrapper": "^1.3.5",
    "react": "^16.2.0",
    "react-dom": "^16.8.5",
    "react-redux": "^5.0.6",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0"
  },
  "scripts": {
    "dev": "next",
    "build": "next build && next export",
    "start": "next start",
    "test": "jest -u",
    "coverage": "npm test -- --coverage && cat ./coverage/lcov.info | coveralls"
  },
  "devDependencies": {
    "babel-plugin-relay": "^1.4.1",
    "coveralls": "^3.0.0",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "jest": "^22.0.3",
    "react-addons-test-utils": "^15.6.2",
    "react-test-renderer": "^16.2.0",
    "redux-devtools-extension": "^2.13.2"
  }
}
